<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="190dp"
    android:background="@color/colorPrimary"
    android:paddingTop="10dp">
   
    <ImageView
        android:id="@+id/drawer_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_username"
        android:layout_below="@id/drawer_avatar"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Username"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_email"
        android:layout_below="@id/drawer_username"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="something@gmail.com"
        android:textColor="@android:color/white"
        />
</RelativeLayout>